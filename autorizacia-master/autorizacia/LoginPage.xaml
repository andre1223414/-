<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autorizacia.LoginPage"
             Title="ВЫ ЗАРЕГИСТРИРОВАНЫ?">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="EMAIL" FontAttributes="Bold" />
        <Entry x:Name="EmailEntry" Placeholder="Введите ваш email" Keyboard="Email" />

        <Label Text="ПАРОЛЬ" FontAttributes="Bold" Margin="0,10,0,0" />
        <Entry x:Name="PasswordEntry" Placeholder="Введите ваш пароль" IsPassword="True" />

        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
            <CheckBox x:Name="RememberMeCheckBox" />
            <Label Text="Запомнить меня?" VerticalOptions="Center" />
        </StackLayout>

        <Button Text="ВОЙТИ" 
                BackgroundColor="#2196F3" 
                TextColor="White" 
                Margin="0,20,0,0" 
                Clicked="OnLoginClicked" />

        <Button Text="Зарегистрироваться как новый пользователь?" 
                TextColor="#2196F3" 
                BackgroundColor="Transparent" 
                Margin="0,10,0,0" 
                Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
